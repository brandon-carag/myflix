%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      %fieldset
        .sign_in
          =bootstrap_form_tag(url:'/sessions',layout: :default,label_col: "col-sm-6", control_col: "col-sm-4") do |f|  
            %header.h1 Sign In
            =f.email_field :email,control_col: "col-sm-4"
            =f.password_field :password
            =f.submit value:"Sign In",class:"btn btn-default"
            <br><br>
            =link_to "Forget your password?",new_password_reset_path
            <br> 
            =link_to "Haven't signed up yet?",register_path

