%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        =bootstrap_form_for @video, :html => {:multipart => true} ,url: admin_videos_path do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
          =f.text_field :title
          =f.select :category_id,Category.all.map{|category|[category.name,category.id]}
          =f.text_area :description
          =f.file_field :image
          =f.submit



