%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      %form.form-horizontal
        %header
          %h1 Register 
      %fieldset
        = bootstrap_form_for(@user, layout: :horizontal,label_col: "col-sm-2", control_col: "col-sm-6") do |f|  
          =f.email_field :email,label:"Email Address",value:@invitation.recipient_email
          =f.password_field :password
          =f.text_field :full_name
          %fieldset.actions.control-group.col-sm-offset-2
            =f.submit value:"Sign Up",class:"btn btn-default"