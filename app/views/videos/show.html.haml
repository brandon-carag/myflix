%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        =image_tag(@video.large_cover_url)
      .video_info.col-sm-3
        %header
          %h3=@video.title
          %span="Rating: #{@video.avg_rating}/5.0"
        %p=@video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@review) do |f|
        = f.select(:rating,options_for_select([1,2,3,4,5].map {|n| ["#{n} #{"Star".pluralize(n)}",n] }))
        = f.text_area :body,label:"Write Review"
        = f.submit "Submit",class: "btn"

      %header
        %h3= "User Reviews (#{@video.reviews.count})"
      %ul
        -@reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span="Rating: #{review.rating} / 5"
                %p
                  ="by #{review.user.full_name}" #TODO: Create a link to the user's profile

              .col-sm-8
                %p=review.body