%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |q|
              %tr
                %td
                  =q.list_order
                  / %input.form-control(type="text" value="1")
                %td
                  = link_to q.video_title,video_path(q.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  =q.rating
                  / -if video.reviews.find_by(user:current_user)              
                  /   -obj=video.reviews.find_by(user:current_user)
                  /   =obj.rating 
                  / -else
                  /   Not rated
                    
                %td
                  = link_to q.category_name,category_path(q.video)
                %td
                  = link_to "", queue_item(:id => q.id) method: :post do
                    %i.glyphicon.glyphicon-remove
                  = link_to "", method: :post do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"


                  
                  / =link_to "+ My Queue",queue_items_path(:queue_item=>{ :video_id => @video.id,:user_id => current_user.id }), method: :post, class: "btn btn-default"