%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        =bootstrap_form_for @video, url: admin_videos_path do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .col-sm-3
              =f.text_field :title
            .col-sm-6
              =f.select :category,Category.all.map{|category|[category.name,category.id]}
            .col-sm-3
              =f.text_area :description
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              =f.submit



